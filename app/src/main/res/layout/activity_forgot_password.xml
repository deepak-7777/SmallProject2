<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forgot_password_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".Activity.ForgotPassword">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#489EE2"
        android:gravity="center"
        android:layout_marginTop="100dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your registered email address to receive a password reset link."
        android:textSize="16sp"
        android:textColor="#444"
        android:layout_marginTop="20dp"
        android:gravity="center" />

    <EditText
        android:id="@+id/forgotemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#CCCCCC"
        android:drawableStart="@drawable/ic_user"
        android:drawablePadding="10dp"
        android:hint="Type your email"
        android:inputType="text"
        android:minHeight="48dp"
        android:paddingStart="10dp"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btn_reset_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Send Reset Link"
        android:backgroundTint="#453BDE"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:padding="12dp"
        android:textStyle="bold" />

</LinearLayout>
